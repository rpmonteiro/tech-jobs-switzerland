{
  "name": "jobs-backend",
  "version": "1.0.0",
  "description": "Backend for all the jobs websites",
  "main": "index.ts",
  "scripts": {
    "start:dev": "ENVIRONMENT=dev yarn dev",
    "start:prod": "yarn compile && ENVIRONMENT=prod yarn pm2 start dist/index.js",
    "dev": "nodemon -e ts --exec \"npm run compile\"",
    "compile": "tsc && node dist",
    "test": "mocha --opts configs/mocha.opts",
    "seed-data": "ENVIRONMENT=dev ts-node scripts/add-seed-data.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/rpmonteiro/jobs-backend.git"
  },
  "author": "Ricardo Monteiro",
  "license": "ISC",
  "homepage": "https://bitbucket.org/rpmonteiro/jobs-backend#readme",
  "dependencies": {
    "@google-cloud/firestore": "^0.19.0",
    "@koa/cors": "2",
    "dotenv": "^6.0.0",
    "joi": "^13.7.0",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-router": "^7.4.0",
    "winston": "^3.0.0",
    "pm2": "^3.2.3"
  },
  "devDependencies": {
    "expect": "^23.6.0",
    "@types/dotenv": "^4.0.3",
    "@types/expect": "^1.20.3",
    "@types/joi": "^13.6.0",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.31",
    "@types/koa__cors": "^2.2.2",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "3.1.1"
  }
}
